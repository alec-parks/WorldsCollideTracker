<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vc="clr-namespace:WorldsCollideTracker.ValueConverters;assembly=WorldsCollideTracker"
             xmlns:local="clr-namespace:WorldsCollideTracker.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             d:DataContext="{x:Static local:DesignModels.CheckViewModel}"
             x:Class="WorldsCollideTracker.Views.CheckView">
    
    <UserControl.Resources>
        <vc:BitmapValueConverter x:Key="BitmapValueConverter"/>
    </UserControl.Resources>
    
    <Panel>
        <Border ClipToBounds="True">
            <Panel Height="120">
                <Button Command="{Binding Click}" IsEnabled="{Binding IsAvailable}">
                    <Image Source="{Binding ImageSource, Converter={StaticResource BitmapValueConverter}}" />
                </Button>
            </Panel>
        </Border>
    </Panel>
</UserControl>
