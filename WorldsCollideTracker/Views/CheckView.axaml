<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:WorldsCollideTracker.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vc="clr-namespace:WorldsCollideTracker.ValueConverters;assembly=WorldsCollideTracker"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WorldsCollideTracker.Views.CheckView">
   
    <Design.DataContext>
        <vm:CheckViewModel/>
    </Design.DataContext>
    
    <UserControl.Resources>
        <vc:BitmapValueConverter x:Key="BitmapValueConverter"/>
    </UserControl.Resources>
    
    <StackPanel Spacing="5" Width="200">
        <Border ClipToBounds="True">
            <Panel Height="200">
                <Button Command="{Binding Click}">
                    <Image Source="{Binding ImageSource, Converter={StaticResource BitmapValueConverter}}" />
                </Button>
            </Panel>
        </Border>
    </StackPanel>
</UserControl>
