<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WorldsCollideTracker.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldsCollideTracker.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WorldsCollideTracker.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="WorldsCollideTracker">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Panel Margin="20">
        <ItemsControl x:Name="Gates" Items="{Binding Gates}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:GateView/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Panel>

</Window>
